#!/bin/bash
#
# see: dh_installdeb(1)

set -e

getent passwd onlyoffice >/dev/null || adduser --quiet --home /var/www/{{product}} --system --group onlyoffice
getent group nginx >/dev/null || addgroup --quiet --system nginx
getent passwd nginx >/dev/null || adduser --quiet --system --no-create-home --home /nonexistent --group nginx
usermod -aG onlyoffice,nginx onlyoffice

#DEBHELPER#
